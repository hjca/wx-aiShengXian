.shopAddressList{
  height: auto;
  padding-top: 20rpx;
}
.addressItem{
  height: 200rpx;
  background: #fff;
  border-bottom: 1px solid #f2f2f2;
  padding: 10rpx;
}
.addressInfo{
  height: 100%;
  border-left: 5px solid #ffd600;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
}

.addressUser{
  width: 560rpx;
}
.userInfo,.detailAddress{
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}
.userInfo{
  margin-bottom: 30rpx;
}
.userInfo .name{
  margin-right: 25rpx;
}
.detailAddress{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  font-weight: normal;
  color: #999;
}
.addressEdit{
  flex: 1;
  height: 100%; 
  display: flex;
  align-items: center;
  justify-content: center;
}
.addressEdit image{
  width: 80rpx;
  height: 70rpx;
}
.addAddressButton{
  width: 100%;
  height: 120rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}
.addAddress{
  font-size: 35rpx;
  font-weight: 600;
  color: #333;
  width: 400rpx;
  height: 90rpx;
  text-align: center;
  background: #ffd600;
  border-radius: 10rpx;
  line-height: 90rpx;
}