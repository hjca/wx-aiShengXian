.shopIndex{
  height: auto;
}
.indexSwiper{
  height: 300rpx;
}
.swiperArea{
  width: 100%;
}
.swiperArea image{
  width: 100%;
  height: 100%;
}
.indexMenu{
  height: 200rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
}
.nav-item{
  width: auto;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-item image{
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}
.nav-item text{
  font-size: 30rpx;
  color: #333;
}
.indexStore{
  height: auto;
  background: #fff;
}
.storeTitle{
  display: flex;
  justify-content: center;
}
.storeTitle,.storeTitle image{
  height: 113rpx;
}
.titleMenu{
  height: 180rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.titleMenu image{
  width: 340rpx;
  height: 136rpx;
}
.storeClassify{
  height: auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 20rpx;
}
.menuClassItem{
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.menuClassItem image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
}
.menuClassItem text{
  font-size:30rpx;
  color:#333;
}
.classList{
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}
.classListItem{
  height: 150rpx;
  width: 45%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-left: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
  padding: 10rpx;
}
.classListItem .classLeft{
  flex: 1;
  height: 100%;
}
.classLeft .classTitle{
  font-size: 40rpx;
  color: #333;
}
.classLeft .classTitles{
  font-size: 24rpx;
  color: #333;
}
.classListItem image{
  width: 120rpx;
  height: 95%;
}
.storeBreadClass{
  height: auto;
  background: #fff;
}
.breadArea{
  height: auto;
}
.breadTitle{
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.storeBreadClass{
  margin-top: 20rpx;
}
.breadTitle text{
  font-size: 35rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}
.breadMore{
  position: absolute;
  height: 100%;
  right: 0;
  top: 0;
  width: 140rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.breadMore text{
  font-size: 27rpx;
  color: #333;
  font-weight: normal;
}
.breadTitleImg{
  height: auto;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}
.breadTitleImg image{
  width: 100%;
  height: 180rpx;
}
.shopListMilk{
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 20rpx;
}
.milkItem{
  width: 30%;
  height: 270rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  border-right: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
  padding: 10rpx;
}
.milkItem image{
  width: 100%;
  height: 150rpx;
}
.milkItem .shopName{
  font-size: 26rpx;
  height: auto;
  width: 100%;
  color: #333;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.milkItem .addShopCart{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.milkItem .addShopCart .priceShop{
  color: #ff0000;
  font-size: 30rpx;
}
.milkItem .addShopCart image{
  width: 45rpx;
  height: 45rpx;
}